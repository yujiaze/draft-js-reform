{
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "semicolon": [
            true,
            "never"
        ],
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template"
        ],
        "trailing-comma": false, //不检查逗号
        "object-literal-sort-keys": false //不按照字母顺序排列key
    },
    "jsRules": {
        "semicolon": [
            true,
            "never"
        ],
        "quotemark": [
            true,
            "single",
            "jsx-double",
            "avoid-template"
        ],
        "trailing-comma": false,
        "object-literal-sort-keys": false
    }
}