{
    "extends": [
        "tslint:recommended",
        "tslint-react"
    ],
    "rules": {
        "semicolon": [
            true,
            "never"
        ],
        "quotemark": [
            true,
            "single",
            "jsx-double",
            "avoid-template"
        ],
        "max-line-length": [
            true,
            150
        ],
        "indent": [
            "error",
            4
        ],
        "jsx-no-multiline-js": false,
        "trailing-comma": false, //不检查逗号
        "ordered-imports": false, //不按照字母顺序import
        "object-literal-sort-keys": false //不按照字母顺序排列object key
    },
    "jsRules": {
        "semicolon": [
            true,
            "never"
        ],
        "quotemark": [
            true,
            "single",
            "jsx-double",
            "avoid-template"
        ],
        "trailing-comma": false,
        "object-literal-sort-keys": false
    }
}